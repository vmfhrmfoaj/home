// Place your key bindings in this file to override the defaults
[
   // Indentation
   {
      "key": "ctrl+.",
      "command": "editor.action.indentLines",
      "when": "textInputFocus && !editorReadonly && vim.mode == 'Insert'"
   },

   // Emacs keybinding
   {
      "key": "ctrl+h",
      "command": "deleteLeft",
      "when": "textInputFocus && !editorReadonly && vim.mode == 'Insert'"
   },
   {
      "key": "ctrl+h",
      "command": "-editor.action.startFindReplaceAction"
   },

   // Tab
   {
      "key": "tab",
      "command": "tab",
      "when": "editorTextFocus && !editorReadonly && vim.mode == 'Insert' && !suggestWidgetVisible"
   },
   {
      "key": "tab",
      "command": "search.action.focusNextSearchResult",
      "when": "textInputFocus && hasSearchResult && searchViewletVisible && vim.mode == 'Normal'"
   },
   {
      "key": "shift+tab",
      "command": "search.action.focusPreviousSearchResult",
      "when": "textInputFocus && hasSearchResult && searchViewletVisible && vim.mode == 'Normal'"
   },

   // Toggle
   {
      "key": "alt+j",
      "command": "workbench.action.toggleSidebarPosition",
   },

   // for Vim
   {
      "key": "enter",
      "command": "multiCommand.vimSelectedSuggestionAndEscape",
      "when": "acceptSuggestionOnEnter && suggestWidgetVisible && suggestionMakesTextEdit && textInputFocus && vim.mode == 'Insert'"
   },
   {
      "key": "ctrl+shift+f",
      "command": "multiCommand.findInFiles",
      "when": "editorTextFocus"
   },
   {
      "key": "ctrl+pageup",
      "command": "multiCommand.vimPreviousEditor",
      "when": "editorTextFocus && vim.mode == 'Insert'"
   },
   {
      "key": "ctrl+pagedown",
      "command": "multiCommand.vimNextEditor",
      "when": "editorTextFocus && vim.mode == 'Insert'"
   },
   {
      "key": "ctrl+p",
      "command": "multiCommand.vimQuickOpen",
      "when": "editorTextFocus && vim.mode == 'Insert'"
   },


   // for Git and Gitlens
   {
      "key": "ctrl+shift+g shift+s",
      "command": "gitlens.showQuickCommitDetails",
      "when": "gitlens:enabled"
   },
   {
      "key": "ctrl+shift+g NumPad_Add",
      "command": "multiCommand.gitStageSelectedRanges"
   },
   {
      "key": "ctrl+shift+g NumPad_Multiply",
      "command": "git.stageAll"
   },
   {
      "key": "ctrl+shift+g NumPad_Subtract",
      "command": "multiCommand.gitUnstageSelectedRanges"
   },
   {
      "key": "ctrl+shift+g NumPad_Divide",
      "command": "git.unstageAll"
   },
   {
      "key": "ctrl+shift+g shift+.",
      "command": "workbench.action.editor.nextChange",
      "when": "editorTextFocus"
   },
   {
      "key": "ctrl+shift+g shift+,",
      "command": "workbench.action.editor.previousChange",
      "when": "editorTextFocus"
   },
]