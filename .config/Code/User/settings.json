{
    // Appearance
    "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontWeight": "bold",
    "editor.tokenColorCustomizations": {
        "[Horizon]": {
            "textMateRules": [
                {
                    "scope": "comment",
                    "settings": {
                        "fontStyle": "" // for removing italic style on the comment
                    }
                }
            ]
        }
    },
    "editor.wordWrapColumn": 120,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "bold",
    "window.menuBarVisibility": "toggle",
    "workbench.colorCustomizations": {
        "[Atom One Light]": {
            "editorCursor.background": "#FFF", // for Vim extension
            "sideBarSectionHeader.background": "#EEE",
        },
        "[Horizon]": {
            "sideBar.background": "#191B22",
            "tab.border": "#242630",
            "tab.activeBorder": "#1C1E2600", // clear
            "tab.activeBorderTop": "#E95378",
        },
    },
    "workbench.colorTheme": "Horizon",
    "workbench.iconTheme": "material-icon-theme",

    // Edit
    "breadcrumbs.enabled": true,
    "workbench.editor.enablePreview": false,
    "editor.lineNumbers": "relative",
    "editor.renderWhitespace": "selection",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 10,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    ///
    /// Extentions
    ///

    // C/C++
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.updateChannel": "Default",

    // Gitlens
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.format": "${author}(${agoOrDate}): \"${message}\"",

    // Markdownlint
    "markdownlint.config": {
        "MD024": false,
    },

    // multi-command
    "multiCommand.commands": [
        {
            "command": "multiCommand.vimNohAndEscape",
            "sequence": [
                "extension.vim_ctrl+h",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.vimFindInFiles",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.findInFiles"
            ]
        },
        {
            "command": "multiCommand.vimSelectedSuggestionAndEscape",
            "sequence": [
                "acceptSelectedSuggestionOnEnter",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.gitStageSelectedRanges",
            "sequence": [
                "git.stageSelectedRanges",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.gitUnstageSelectedRanges",
            "sequence": [
                "git.unstageSelectedRanges",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.vimPreviousEditor",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.previousEditor"
            ]
        },
        {
            "command": "multiCommand.vimNextEditor",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.nextEditor"
            ]
        },
        {
            "command": "multiCommand.vimQuickOpen",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.quickOpen",
            ]
        },
        {
            "command": "multiCommand.vimOpenNextRecentlyUsedEditorInGroup",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.openNextRecentlyUsedEditorInGroup"
            ]
        },
        {
            "command": "multiCommand.vimOpenPreviousRecentlyUsedEditorInGroup",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.openPreviousRecentlyUsedEditorInGroup"
            ]
        },
    ],

    // Python
    "python.jediEnabled": false,

    // Remote Development
    "remote.SSH.showLoginTerminal": true,

    // Vim
    "workbench.list.keyboardNavigation": "simple", // see, https://github.com/Microsoft/vscode/issues/66995#issuecomment-457123611
    "vim.sneak": true,
    "vim.camelCaseMotion.enable": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.searchHighlightColor": "#74293c",
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-j>": false,
        "<C-w>": false,
    },
    // - https://github.com/VSpaceCode/VSpaceCode
    "vim.leader": "<space>",
    "vim.visualModeKeyBindingsNonRecursive": [
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                ";"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                },
                {
                    "command": "extension.vim_escape",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "j",
                "="
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.format",
                    "args": []
                }
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-h>"],
            "commands": [":nohl"]
        },
    ],
    "vim.normalModeKeyBindings": [
