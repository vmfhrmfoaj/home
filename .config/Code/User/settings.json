{
    // Appearance
    "editor.fontFamily": "'Cascadia Code', monospace",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.fontWeight": "600",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120],
    "terminal.integrated.fontSize": 12,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "default",
    "window.zoomLevel": 0,
    "workbench.sideBar.location": "left",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Visual Studio Dark",

    "workbench.colorCustomizations": {
        // Stable
        "statusBarItem.remoteBackground": "#22a4f1",
        "[Visual Studio Dark]": {
            "statusBar.background": "#333",
            "statusBar.noFolderBackground": "#333",
            "statusBar.noFolderBorder": "#333",
            "editor.lineHighlightBorder": "#1e1e1e",
            "editorRuler.foreground": "#5a5a5a20",
        },
        "[Bluloco Light Italic]": {
            "activityBar.background": "#c2c4c7",
            "statusBar.background": "#c2c4c7",
            "statusBar.border": "#c2c4c7",
            "statusBar.noFolderBackground": "#c2c4c7",
            "statusBar.noFolderBorder": "#c2c4c7",
            "editor.selectionHighlightBackground": "#00000010", // fix for overlay
            "editorRuler.foreground": "#d5d7d830",
            "rust_analyzer.inlayHints.foreground": "#d5275399",
        },
    },
    "editor.semanticTokenColorCustomizations": {
        "[Visual Studio Dark]": {
            "enabled": true,
            "rules": {
                "*.mutable": {
                    "underline": true,
                },
                "*.unsafe": {
                    "bold": true,
                    "italic": true,
                },
                "punctuation": {
                    "foreground": "#a9a9a9",
                },
            },
        },
    },
    "editor.tokenColorCustomizations": {
        "[Visual Studio Dark]": {
            "keywords": "#c586c0",
            "comments": {
                "fontStyle": "italic"
            },
            "textMateRules": [
                {
                    "scope": [
                        // Rust
                        "keyword.operator.sigil.rust",
                        "keyword.operator.misc.rust",
                        // C/C++
                        "punctuation.terminator.statement.c",
                        "punctuation.separator.delimiter.c",
                        "punctuation.separator.pointer-access.c",
                        "punctuation.section.block.begin.bracket.curly.c",
                        "punctuation.section.block.end.bracket.curly.c",
                        "punctuation.section.parameters.begin.bracket.round.c",
                        "punctuation.section.parameters.end.bracket.round.c",
                        "punctuation.section.arguments.begin.bracket.round.c",
                        "punctuation.section.arguments.end.bracket.round.c",
                        "punctuation.section.parens.begin.bracket.round.c",
                        "punctuation.section.parens.end.bracket.round.c",
                        "punctuation.definition.begin.bracket.square.c",
                        "punctuation.definition.end.bracket.square.c",
                        // Shell
                        "punctuation.definition.variable.shell",
                        "punctuation.definition.group.shell",
                        "punctuation.definition.arguments.shell",
                        "punctuation.definition.logical-expression.shell",
                        "keyword.operator.list.shell",
                        "keyword.operator.pipe.shell",
                        "keyword.operator.redirect.shell",
                        "keyword.operator.heredoc.shell",
                        "punctuation.definition.subshell.shell",
                    ],
                    "settings": {
                        "foreground": "#a9a9a9",
                    }
                },
            ]
        }
    },

    // Edit
    "breadcrumbs.enabled": false,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "selection",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 10,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "workbench.editor.enablePreview": false,

    // Misc.
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    ///
    /// Extentions
    ///

    // C/C++
    "C_Cpp.updateChannel": "Default",
    // CMake
    "cmake.configureOnOpen": true,

    // Gitlens
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.format": "${author}(${agoOrDate}): \"${message}\"",

    // Markdownlint
    "markdownlint.config": {
        "MD024": false,
    },

    // multi-command
    "multiCommand.commands": [
        {
            "command": "multiCommand.vimFindInFiles",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.findInFiles"
            ]
        },
        {
            "command": "multiCommand.vimSelectedSuggestionAndEscape",
            "sequence": [
                "acceptSelectedSuggestionOnEnter",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.vimCancelSuggestionAndEscape",
            "sequence": [
                "hideSuggestWidget",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.gitStageSelectedRanges",
            "sequence": [
                "git.stageSelectedRanges",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.gitUnstageSelectedRanges",
            "sequence": [
                "git.unstageSelectedRanges",
                "extension.vim_escape"
            ]
        },
        {
            "command": "multiCommand.vimPreviousEditor",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.previousEditor"
            ]
        },
        {
            "command": "multiCommand.vimNextEditor",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.nextEditor"
            ]
        },
        {
            "command": "multiCommand.vimQuickOpen",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.quickOpen",
            ]
        },
        {
            "command": "multiCommand.vimOpenNextRecentlyUsedEditorInGroup",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.nextEditor"
            ]
        },
        {
            "command": "multiCommand.vimOpenPreviousRecentlyUsedEditorInGroup",
            "sequence": [
                "extension.vim_escape",
                "workbench.action.previousEditor"
            ]
        },
        {
            "command": "multiCommand.revealReferenceAndHide",
            "sequence": [
                "revealReference",
                "closeReferenceSearch"
            ]
        },
        {
            "command": "multiCommand.goNextChangeAndShow",
            "sequence": [
                "workbench.action.editor.nextChange",
                "editor.action.dirtydiff.next"
            ]
        },
        {
            "command": "multiCommand.goPreviousChangeAndShow",
            "sequence": [
                "workbench.action.editor.previousChange",
                "editor.action.dirtydiff.previous"
            ]
        },
        {
            "command": "multiCommand.vimEscapeAndFind",
            "sequence": [
                "extension.vim_escape",
                "actions.find"
            ]
        },
        {
            "command": "multiCommand.findAndNextMatchFindAction",
            "sequence": [
                "actions.find",
                "editor.action.nextMatchFindAction",
                "workbench.action.focusActiveEditorGroup"
            ]
        },
        {
            "command": "multiCommand.findAndPreviousMatchFindAction",
            "sequence": [
                "actions.find",
                "editor.action.previousMatchFindAction",
                "workbench.action.focusActiveEditorGroup"
            ]
        },
        {
            "command": "multiCommand.hideSearchBoxAndNextMatchFindAction",
            "sequence": [
                "closeFindWidget",
                "editor.action.nextMatchFindAction"
            ]
        },
        {
            "command": "multiCommand.hideSearchBoxAndPreviousMatchFindAction",
            "sequence": [
                "closeFindWidget",
                "editor.action.previousMatchFindAction"
            ]
        },
        {
            "command": "multiCommand.cancelFindWidget",
            "sequence": [
                "closeFindWidget",
                "cancelSelection",
            ]
        },
        {
            "command": "multiCommand.vimMarkAndFind",
            "sequence": [
                {"command": "type", "args": {"text": "m"}},
                {"command": "type", "args": {"text": "0"}},
                "actions.find"
            ]
        },
        {
            "command": "multiCommand.vimCancelFindWidgetAndGoBack",
            "sequence": [
                "closeFindWidget",
                "cancelSelection",
                {"command": "type", "args": {"text": "`"}},
                {"command": "type", "args": {"text": "0"}},
            ]
        },
    ],

    // Python
    "python.jediEnabled": false,

    // Remote Development
    "remote.SSH.showLoginTerminal": true,

    // Rust Analyzer
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.inlayHints.parameterHints": false,

    // Vim
    "workbench.list.keyboardNavigation": "simple", // see, https://github.com/Microsoft/vscode/issues/66995#issuecomment-457123611
    "vim.sneak": true,
    "vim.camelCaseMotion.enable": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.surround": true,
    "vim.visualstar": true,
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-f>": false,
        "<C-t>": false,
        "<C-w>": false,
        "<C-z>": false,
    },

    "vim.leader": "<space>",
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                ";"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                },
                {
                    "command": "extension.vim_escape",
                    "args": []
                }
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-h>"],
            "commands": [
                {
                    "command": "closeFindWidget",
                    "args": []
                }
            ]
        },
        {
            "before": ["<C-r>"],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        },
        {
            "before": ["*"],
            "commands": [
                {
                    "command": "multiCommand.findAndNextMatchFindAction",
                    "args": []
                }
            ]
        },
        {
            "before": ["/"],
            "commands": [
                {
                    "command": "multiCommand.vimMarkAndFind",
                    "args": []
                }
            ]
        },
        {
            "before": ["K"],
            "after": ["g", "h"]
        },
        {
            "before": ["N"],
            "commands": [
                {
                    "command": "editor.action.previousMatchFindAction",
                    "args": []
                }
            ]
        },
        {
            "before": ["n"],
            "commands": [
                {
                    "command": "editor.action.nextMatchFindAction",
                    "args": []
                }
            ]
        },
        {
            "before": ["u"],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "g",
                ";"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.navigateToLastEditLocation",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "g",
                "D"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.referenceSearch.trigger",
                    "args": []
                },
            ]
        },
        {
            "before": [
                "g",
                "x"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.openLink",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                ";",
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "y"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.copyPathOfActiveFile",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "i",
                "s"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.insertSnippet",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "r"
            ],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.rename",
                    "args": []
                }
            ]
        },
    ],
}
